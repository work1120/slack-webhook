@model SlackWebhook.Web.Models.LoginModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="card card-container">
        <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
        <p id="profile-name" class="profile-name-card"></p>
        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {
            <span id="reauth-email" class="reauth-email"></span>
            @Html.TextBoxFor(m => m.Id, new { Class = "form-control", placeholder = "Email address", required = "required" })
            @Html.TextBoxFor(m => m.Pw, new { Class = "form-control", placeholder = "Password", required = "required" })

            <input type="submit" value="Sign in" class="btn btn-lg btn-primary btn-block btn-signin" />
        }

        <a href="#" class="forgot-password">
            Forgot the password?
        </a>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div><!-- /card-container -->
</div><!-- /container -->